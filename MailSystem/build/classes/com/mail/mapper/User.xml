<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
    <mapper namespace="UserMapper">
        <insert id="add" parameterType="Map" >
            insert into users ( username,pwdHash,pwdAlgorithm,useForwarding,useAlias,password) values (#{username},#{pwdHash},"SHA",0,0,#{password})   
        </insert>
         
        <delete id="delete" parameterType="String" >
            delete from users where username= #{username}  
        </delete>
         
        <select id="getByUserid" parameterType="String" resultType="User">
            select * from   users  where username= #{username}   
        </select>
 
        <update id="editPassword" parameterType="String" >
            update users 
            set 
            	pwdHash=#{pwdHash},
            	password=#{password}
            where 
            	username=#{username}   
        </update>
        
        <select id="list" parameterType="Map" resultType="User">
            select * from   users
            LIMIT #{limit_start}, #{limit_size}
        </select>  
        
        <select id="count">
        	select count(*) from users
        </select>  
        
        <select id="SensitiveWordSet" resultType="String">
        	select minganci from minganci
        </select>
        
        <!-- 设为管理员 -->
        <update id="SetAdmin" parameterType="Map">
	        update users
	        set ifAdmin=
	        <if test="ifAdmin==0">
	        =1
	        </if>
	        <if test="ifAdmin==1">
	        =0
	        </if>
	        where username=#{username}
        </update>
        
        <!-- username模糊查找 -->
        <select id="searchByUsername" parameterType="Map" resultType="User">
        	select * from users
        	where username like concat(concat('%',#{username}),'%')
        	LIMIT #{limit_start}, #{limit_size}
        </select>
    </mapper>